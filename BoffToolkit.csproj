<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.0</Version>
    <Authors>Nicola Boffoli</Authors>
    <Description>Toolkit supporting base activities: caching, pooling, configuration
                    exceptions, type loading</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Nota di rilascio del pacchetto</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="readme.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Configuration\" />
    <None Remove="Exceptions\" />
    <None Remove="Caching\" />
    <None Remove="Pooling\" />
    <None Remove="TypeLoading\" />
    <None Remove="Configuration\JsonSettings\" />
    <None Remove="Configuration\JsonSettings\Core\" />
    <None Remove="Logging\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Configuration\" />
    <Folder Include="Exceptions\" />
    <Folder Include="Caching\" />
    <Folder Include="Pooling\" />
    <Folder Include="TypeLoading\" />
    <Folder Include="Configuration\JsonSettings\" />
    <Folder Include="Configuration\JsonSettings\Core\" />
    <Folder Include="Logging\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.15" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="7.0.0" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Configuration\ConfigurationManager %28copia%29.cs" />
    <Compile Remove="Configuration\AppsettingsManager %28copia%29.cs" />
    <Compile Remove="Configuration\ConfigurationManager %28copia%29.cs" />
    <Compile Remove="Configuration\AppsettingsManager.cs" />
    <Compile Remove="Configuration\AppsettingsManager %28copia%29.cs" />
    <Compile Remove="Logging\CentralLoggerFactory.cs" />
  </ItemGroup>
</Project>
